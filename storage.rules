
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    // The new admin UID for corporatemagnatecoop@outlook.com should be pasted here.
    let ADMIN_UID = "PASTE_YOUR_NEW_ADMIN_UID_HERE"; 

    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }

    // --- Temporary Application Uploads Folder ---
    // Allow anyone to write files to a unique folder during application.
    // This path is temporary. Files should be moved to a permanent, secure location
    // by a backend process after the application is processed.
    match /application-uploads/{submissionId}/{fileName} {
      // Allow creation of files. submissionId is a unique, unguessable ID generated by the client.
      allow create: if true;
      // Disallow reading, updating, or deleting to prevent users from accessing each other's files.
      allow read, update, delete: if false;
    }

    // --- Authenticated User Folder ---
    // This is the key change. Only the authenticated owner of the file can read it.
    match /user-uploads/{userId}/{allPaths=**} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Writes and deletes are still handled by backend functions.
      allow write: if false;
      allow delete: if false;
    }

    // --- Admin-Only Excel Import Folder ---
    // Admin uses a server action to write. Direct client writes are blocked for security.
    match /excel-imports/{fileName} {
        allow read: if isAdmin();
        allow write: if isAdmin(); // Admin can upload via server-side logic
    }
  }
}

    
