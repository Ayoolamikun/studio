
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // The admin UID for the designated admin user.
    let ADMIN_UID = "pMju3hGH6SaCOJjJ6hW0BSKzBmS2"; 

    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }

    // --- File Validation Helpers ---
    // Max file size: 10MB (matches client-side validation)
    function isValidSize() {
      return request.resource.size <= 10 * 1024 * 1024;
    }
    
    // Allowed file types: images and PDFs (matches client-side validation)
    function isValidFileType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType == 'application/pdf';
    }

    // --- Admin-Only Excel Import Folder ---
    match /excel-imports/{fileName} {
        // Admin uploads are handled by a server function, but rules provide defense-in-depth.
        allow read, write: if isAdmin();
    }
    
    // --- Loan Application Uploads ---
    // Path structure: loan-applications/{userId}/{fileName}
    match /loan-applications/{userId}/{fileName} {
      allow write: if isOwner(userId) && isValidSize() && isValidFileType();
      allow read: if isOwner(userId) || isAdmin();
    }

    // --- Investment Application Uploads ---
    // Path structure: investment-uploads/{userId}/{fileName}
    match /investment-uploads/{userId}/{fileName} {
      allow write: if isOwner(userId) && isValidSize() && isValidFileType();
      allow read: if isOwner(userId) || isAdmin(); 
    }
  }
}
