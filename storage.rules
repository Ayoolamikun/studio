
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // The admin UID for corporatemagnatecoop@outlook.com
    let ADMIN_UID = "1EW8TCRo2LOdJEHrWrrVOTvJZJE2"; 

    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }

    // --- File Validation Helpers ---
    // Max file size: 5MB (matches client-side validation)
    function isValidSize() {
      return request.resource.size <= 5 * 1024 * 1024;
    }
    
    // Allowed file types: images and PDFs (matches client-side validation)
    function isValidFileType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType == 'application/pdf';
    }

    // --- Admin-Only Excel Import Folder ---
    match /excel-imports/{fileName} {
        // Admin uploads via a server function, so these rules are a safeguard
        allow read, write: if isAdmin();
    }
    
    // --- Investment Application Uploads ---
    // Users can write to a folder named after their own UID.
    match /investment-uploads/{userId}/{fileName} {
      // User must own the folder, and file must meet size/type requirements
      allow write: if isOwner(userId) && isValidSize() && isValidFileType();
      
      // User can read their own files, Admin can read any file
      allow read: if isOwner(userId) || isAdmin(); 
    }
  }
}
