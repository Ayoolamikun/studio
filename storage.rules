
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    let ADMIN_UID = "1EW8TCRo2LOdJEHrWrrVOTvJZJE2"; 

    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }

    // Allow anyone to upload application documents. Publicly writable.
    match /loan-documents/{allPaths=**} {
      allow write: if true;
      allow read: if isAdmin(); // Only admin can read
    }
    
    // Allow anyone to upload guarantor IDs. Publicly writable.
    match /guarantor-ids/{allPaths=**} {
      allow write: if true;
      allow read: if isAdmin(); // Only admin can read
    }

    // Allow authenticated users to manage files in their own folder.
    match /user-uploads/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Matches any file in the 'excel-imports' folder
    match /excel-imports/{fileName} {
        // Only admins can read and write files here
        allow read, write: if isAdmin();
    }

    // A general rule for other paths if needed in the future.
    // By default, deny all other access.
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
