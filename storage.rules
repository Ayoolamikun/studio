
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // The admin UID for corporatemagnatecoop@outlook.com
    let ADMIN_UID = "1EW8TCRo2LOdJEHrWrrVOTvJZJE2"; 

    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }

    // --- Admin-Only Excel Import Folder ---
    match /excel-imports/{fileName} {
        allow read, write: if isAdmin(); // Admin can upload via server-side logic
    }
    
    // --- Investment Application Uploads ---
    // Users can write to a folder named after their own UID.
    match /investment-uploads/{userId}/{fileName} {
      allow write: if isOwner(userId);
      allow read: if isOwner(userId) || isAdmin(); // User can read their own, Admin can read any
    }
  }
}
