
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    let ADMIN_UID = "1EW8TCRo2LOdJEHrWrrVOTvJZJE2"; 

    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }

    // --- Public Upload Folders ---
    // Allow anyone to write to these specific folders for the application form.
    // This is necessary because the user is not authenticated when they apply.
    match /passports/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /ids/{allPaths=**} {
      allow read, write: if true;
    }

    // --- Authenticated User Folder ---
    // Users can read and write files only within their own designated folder.
    match /user-uploads/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // --- Admin-Only Excel Import Folder ---
    // Admin uses a server action to write. Direct client writes are blocked for security.
    match /excel-imports/{fileName} {
        allow read: if isAdmin();
        allow write: if isAdmin(); // Admin can upload via server-side logic
    }
  }
}

    