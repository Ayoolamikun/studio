
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Start of Admin UID Configuration ---
    // IMPORTANT: This UID has been set to grant admin access.
    // This is the UID for the user: corporatemagnatecoop@outlook.com
    let ADMIN_UID = "PASTE_YOUR_NEW_ADMIN_UID_HERE"; 
    // --- End of Admin UID Configuration ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Admin status is now determined by the hardcoded UID.
    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }

    match /loanApplications/{applicationId} {
      // Writes are handled by the backend function. Client writes are disallowed for security.
      allow create: if false;
      // Only an admin can read/update/delete applications.
      allow read, update, delete: if isAdmin();
    }
    
    match /investmentApplications/{investmentId} {
      // Users can create their own application via a backend function.
      allow create: if false;
      // Users can read their own applications. Admins can read any.
      allow read: if isAdmin() || isOwner(resource.data.userId);
      // Only Admins can update/delete.
      allow update, delete: if isAdmin();
    }

    match /Customers/{customerId} {
      // Only admins can manage customer records
      allow read, write: if isAdmin();
    }
    
    match /Loans/{loanId} {
      // Admins can manage all loan documents
      allow write: if isAdmin();

      // Admins can read any loan.
      // Users can only read loans where their UID matches the borrowerId.
      // This enforces that list() queries from the client MUST include a where('borrowerId', '==', auth.uid) filter.
      allow read: if isAdmin() || (isSignedIn() && resource.data.borrowerId == request.auth.uid);
    }

    match /ExcelFiles/{excelId} {
        // Only admins can manage excel import records
        allow read, write, delete: if isAdmin();
    }
  }
}
