rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // For this scratch build, we'll allow public writes to the loan applications
    // collection so the form can be submitted without being logged in.
    // In a real app, you would tighten this rule to require authentication.
    match /loanApplications/{applicationId} {
      allow create: if true;
      
      // By default, deny all reads, updates, and deletes from the client.
      // Data should be managed by a secure backend or admin panel.
      allow read, update, delete: if false;
    }
  }
}
