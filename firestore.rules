rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Loans collection - users can only access their own loans
    match /Loans/{loanId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.borrowerId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.borrowerId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.borrowerId;
    }
    
    // work_with_us_requests collection
    match /work_with_us_requests/{requestId} {
      allow read, write: if request.auth != null;
    }
    
    // Add other collections as needed
  }
}
