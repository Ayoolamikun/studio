rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ==========================
       Helper Functions
    ========================== */

    function isSignedIn() {
      return request.auth != null;
    }

    // The admin UID for the designated admin user.
    function isAdmin() {
      return isSignedIn()
        && request.auth.uid == "MUST_BE_REPLACED_WITH_NEW_ADMIN_UID";
    }

    /* ==========================
       Loan Applications
    ========================== */

    match /loanApplications/{applicationId} {

      // Anyone signed in can create an application for themselves.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;

      // Users can read their own applications, Admins can read any.
      allow read: if isAdmin()
        || (isSignedIn() && resource.data.userId == request.auth.uid);

      // Only Admins can update or delete applications after submission.
      allow update, delete: if isAdmin();
    }

    /* ==========================
       Investment Applications
    ========================== */

    match /investmentApplications/{investmentId} {

      // Logged in users can create their own investment applications.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;

      // Users can read their own applications; Admins can read any.
      allow read: if isAdmin()
        || (isSignedIn() && resource.data.userId == request.auth.uid);

      // Only Admins can update or delete investment applications.
      allow update, delete: if isAdmin();
    }
    
    /* ==========================
       Investments (Active)
    ========================== */

    match /Investments/{investmentId} {
      // Users can read their own investment details; Admins can read any.
      allow read: if isAdmin()
        || (isSignedIn() && resource.data.userId == request.auth.uid);

      // All investment creation/updates are handled by admin functions.
      allow write: if isAdmin();
    }

    /* ==========================
       Customers (Admin Only)
    ========================== */

    match /Customers/{customerId} {
      // All customer record management is handled by admin functions.
      allow read, write: if isAdmin();
    }

    /* ==========================
       Loans (Approved Loans)
    ========================== */

    match /Loans/{loanId} {

      // Users can read their own loan details; Admins can read any.
      allow read: if isAdmin()
        || (isSignedIn() && resource.data.borrowerId == request.auth.uid);

      // All loan creation/updates are handled by admin functions.
      allow write: if isAdmin();
    }
  }
}
