
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    let ADMIN_UID = "1EW8TCRo2LOdJEHrWrrVOTvJZJE2"; 

    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }

    // --- Application Files Folder ---
    // These files are uploaded via a secure backend function and made public.
    // Client-side writes are disallowed for security.
    match /application-files/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // --- Authenticated User Folder ---
    // This rule allows authenticated users to manage their own files via the 'My Files' page.
    // Writes are handled securely by a dedicated Cloud Function.
    match /user-uploads/{userId}/{allPaths=**} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Direct client writes are denied; all uploads must go through the 'uploadFile' function.
      allow write: if false;
    }

    // --- Admin-Only Excel Import Folder ---
    // Admin uses a server action to write. Direct client writes are blocked for security.
    match /excel-imports/{fileName} {
        allow read: if isAdmin();
        allow write: if isAdmin(); // Admin can upload via server-side logic
    }
  }
}
