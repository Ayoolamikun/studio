
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    let ADMIN_UID = "1EW8TCRo2LOdJEHrWrrVOTvJZJE2"; 

    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }

    // --- Public Routes for Application Submission ---
    // These paths are written to by the trusted server-side action (Admin SDK).
    // Direct client writes are and should be blocked.
    match /loan-documents/{allPaths=**} {
      allow write: if false; 
      allow read: if isAdmin();
    }
    
    match /guarantor-ids/{allPaths=**} {
      allow write: if false;
      allow read: if isAdmin();
    }

    // --- Authenticated User Routes ---
    // Users can read and write files only within their own designated folder.
    match /user-uploads/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // --- Admin-Only Routes ---
    // Only the admin can manage the Excel import folder.
    match /excel-imports/{fileName} {
      allow read, write: if isAdmin();
    }

    // --- Default Deny ---
    // Deny all other access to prevent unauthorized reads/writes.
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
