
/**
 * @fileoverview Firestore Security Rules for Corporate Magnate Cooperative Society Ltd.
 *
 * This ruleset implements role-based and ownership-based access control.
 * Admin roles are determined by a hardcoded Admin UID.
 * This simplifies the auth logic and removes the need for custom claims.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Start of Admin UID Configuration ---
    // IMPORTANT: This UID has been set to grant admin access.
    // This is the UID for the user: corporatemagnatecoop@outlook.com
    let ADMIN_UID = "PASTE_YOUR_NEW_ADMIN_UID_HERE";
    // --- End of Admin UID Configuration ---
    
    /**
     * Helper functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Admin status is now checked by comparing the requestor's UID to the hardcoded ADMIN_UID.
    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }
    
    /**
     * @description Customer profiles (borrowers).
     * Only an admin can create, read, update, or delete customer records.
     */
    match /Customers/{customerId} {
      allow read, write: if isAdmin();
    }

    /**
     * @description Loan records.
     * Admins have full read/write access.
     * Borrowers can only read their own loans, and list queries from the client
     * must be properly filtered.
     */
    match /Loans/{loanId} {
      // Admins can manage all loan documents
      allow write: if isAdmin();

      // Admins can get any loan. Users can get their own specific loan document.
      allow get: if isAdmin() || (isSignedIn() && resource.data.borrowerId == request.auth.uid);
      
      // Admins can list all loans. Users can list loans, but client code must filter.
      allow list: if isAdmin() || isSignedIn();
    }
    
    /**
     * @description Excel file metadata for batch imports. Admin-only access.
     */
    match /ExcelFiles/{excelId} {
      allow read, write: if isAdmin();
    }

    /**
     * @description Publicly submitted loan applications. Admin-readable.
     */
    match /loanApplications/{applicationId} {
      // Only authenticated users can create applications (now handled by backend function).
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }

    /**
     * @description Contact form submissions. Publicly writable, admin-readable.
     */
    match /contactFormSubmissions/{contactFormSubmissionId} {
      allow create: if true;
      allow read, write, delete: if isAdmin();
    }

    /**
     * @description File metadata for user uploads.
     * Users can only read or delete their own file documents.
     * Writes are blocked from the client to enforce creation via Cloud Functions.
     */
    match /userFiles/{fileId} {
      allow read, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Writes are handled by the backend function, so client-side writes are disallowed.
      allow create, update: if false; 
    }
  }
}
