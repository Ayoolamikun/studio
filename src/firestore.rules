
/**
 * @fileoverview Firestore Security Rules for Corporate Magnate Cooperative Society Ltd.
 *
 * This ruleset implements role-based and ownership-based access control.
 * Admin roles are determined by a hardcoded Admin UID.
 * This simplifies the auth logic and removes the need for custom claims.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Start of Admin UID Configuration ---
    // IMPORTANT: This UID has been set to grant admin access.
    // This is the UID for the user: corporatemagnate@outlook.com
    let ADMIN_UID = "1EW8TCRo2LOdJEHrWrrVOTvJZJE2"; 
    // --- End of Admin UID Configuration ---
    
    /**
     * Helper functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Admin status is now checked by comparing the requestor's UID to the hardcoded ADMIN_UID.
    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }
    
    /**
     * @description Borrower profiles.
     * Allow anyone to create a profile (signup).
     * Only the owner or an admin can read/update.
     */
    match /Borrowers/{borrowerId} {
      allow create: if isSignedIn();
      allow read, update: if isOwner(borrowerId) || isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Loan records.
     * Admins have full read/write access.
     * Borrowers can create loans for themselves, read their own loans, 
     * and list ONLY their own loans.
     */
    match /Loans/{loanId} {
      // Admins can do anything.
      allow write: if isAdmin();
      allow read: if isAdmin() || (isSignedIn() && resource.data.borrowerId == request.auth.uid);
      
      // Any signed-in user can create a loan for themselves.
      allow create: if isSignedIn() && request.resource.data.borrowerId == request.auth.uid;
      
      // A user can LIST loans only if they are querying for their own borrowerId OR if the user is an admin.
      allow list: if (isSignedIn() && request.query.where.borrowerId == request.auth.uid) || isAdmin();
    }
    
    /**
     * @description Excel file metadata for batch imports. Admin-only access.
     */
    match /ExcelFiles/{excelId} {
      allow read, write: if isAdmin();
    }

    /**
     * @description Publicly submitted loan applications. Admin-readable.
     */
    match /loanApplications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    /**
     * @description Contact form submissions. Publicly writable, admin-readable.
     */
    match /contactFormSubmissions/{contactFormSubmissionId} {
      allow create: if true;
      allow read, write, delete: if isAdmin();
    }

    /**
     * @description File metadata stored after Cloudinary upload.
     * Users can only read their own file documents.
     * Writes are blocked from the client to enforce creation via Cloud Functions.
     */
    match /userFiles/{fileId} {
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;
      // Writes are handled by the backend function, so client-side writes are disallowed.
      allow write: if false; 
    }
  }
}
